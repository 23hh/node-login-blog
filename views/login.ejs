<script>
    
    // 로그인 실행
    function loginEvent() {
        const nickname = $('#nickname').val()
        const password = $('#password').val()
        $.ajax({
            type: "POST",
            url: "/api/login",
            data: { nickname, password },
            success: function (response) {
                localStorage.setItem("token", response.token)
                location.href = "/"
            },
            error: function (error) {
                alert(error.responseJSON.errorMessage)
            },
        });
    }

</script>

<body>

    <div>
        <div class="card-body">
            <div class="form-group">
                <label for="nickname">Nickname</label>
                <input type="email" class="form-control" id="nickname" aria-describedby="emailHelp"
                    placeholder="Enter Nickname">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Password">
            </div>
            <button class="btn btn-outline-primary" onclick="loginEvent()">로그인</button>
            <button class="btn btn-outline-primary" onclick="location.href='/sign'">회원가입</button>
        </div>
    </div>


